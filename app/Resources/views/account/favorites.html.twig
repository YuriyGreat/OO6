{% extends 'base.html.twig' %}

{% block title %}
    favorites
{% endblock %}

{% block body %}


    <h1>{{ user.getUsername() }} favorites</h1>

    {% for item in items %}
        <hr>
        <h5><a href="{{ path('ItemPage', {'page':item.getItemId().getId()}) }}">{{ item.getItemId().getName() }}</a></h5>
        <p>{{ item.getItemId().getManufacturer() }}</p>
        <p>{{ item.getItemId().getPrice() }}$</p>
        <hr>
    {% endfor %}

{% endblock %}